<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#B0D4EF"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recycler_row_userNick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kullanici adi"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#EA1515"
        >

    </TextView>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/recycler_row_imageview"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_margin="5dp"
        >
    </androidx.constraintlayout.utils.widget.ImageFilterView>

    <TextView
        android:id="@+id/recycler_row_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kullanici yorum"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:textColor="#000000"
        >

    </TextView>

</LinearLayout>